<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BinanceMonitorMaui.Models"
             x:Class="BinanceMonitorMaui.MainPage"
             BackgroundColor="#1a1a2e"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Compact Header: Position Count, Time Connected -->
        <Grid Grid.Row="0" Padding="12,8" BackgroundColor="#0f0f1a" ColumnDefinitions="*,Auto">
            <!-- Position Count with Status Dot -->
            <Grid Grid.Column="0" ColumnDefinitions="Auto,*" VerticalOptions="Center" HorizontalOptions="Start">
                <Ellipse x:Name="StatusDot" Grid.Column="0" WidthRequest="8" HeightRequest="8" 
                         Fill="#e94560" Margin="0,0,8,0" VerticalOptions="Center"/>
                <Label x:Name="PositionCountLabel" Grid.Column="1" Text="" FontSize="13" TextColor="#888" VerticalOptions="Center"/>
            </Grid>
            <!-- Time Connected -->
            <Label x:Name="LastUpdateLabel" Grid.Column="1" Text="" FontSize="11" TextColor="#555" VerticalOptions="Center" HorizontalOptions="End"/>
        </Grid>
        
        <!-- Tab Bar -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <!-- Tab Buttons -->
            <Grid Grid.Row="0" BackgroundColor="#0f0f1a" ColumnDefinitions="*,*,*" ColumnSpacing="0">
                <Button x:Name="PositionsTabButton" Grid.Column="0" Text="Positions" FontSize="12"
                        BackgroundColor="#16213e" TextColor="White" CornerRadius="0"
                        Clicked="OnTabButtonClicked" CommandParameter="Positions"/>
                <Button x:Name="PortfolioTabButton" Grid.Column="1" Text="Portfolio" FontSize="12"
                        BackgroundColor="#0f0f1a" TextColor="#888" CornerRadius="0"
                        Clicked="OnTabButtonClicked" CommandParameter="Portfolio"/>
                <Button x:Name="WithdrawalsTabButton" Grid.Column="2" Text="Withdrawals" FontSize="12"
                        BackgroundColor="#0f0f1a" TextColor="#888" CornerRadius="0"
                        Clicked="OnTabButtonClicked" CommandParameter="Withdrawals"/>
            </Grid>
            
            <!-- Tab Content -->
            <Grid x:Name="TabContent" Grid.Row="1">
                <!-- Positions Tab Content -->
                <Grid x:Name="PositionsTab" RowDefinitions="Auto,*">
                    <!-- PnL Summary Card -->
                    <Frame Grid.Row="0" Margin="8,4,8,4" BackgroundColor="#16213e" CornerRadius="12" Padding="12" BorderColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="*,*">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="Total PnL" FontSize="10" TextColor="#888" HorizontalTextAlignment="Center"/>
                                <Label x:Name="TotalPnLLabel" Text="0.00" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Avg %" FontSize="10" TextColor="#888" HorizontalTextAlignment="Center"/>
                                <Label x:Name="TotalPnLPercentLabel" Text="0.00%" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                    
                    <!-- Positions List -->
                    <CollectionView x:Name="PositionsCollection" Grid.Row="1" Margin="8,4,8,0" BackgroundColor="Transparent" IsGrouped="True">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="models:TraderGroup">
                    <Grid Padding="4,10,4,2">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="{Binding TraderName}" FontSize="12" FontAttributes="Bold" TextColor="#64748b" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding PnLSummary}" FontSize="11" FontAttributes="Bold" TextColor="{Binding PnLColor}" VerticalOptions="Center"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Position">
                    <Frame Margin="0,2" Padding="10,8" BackgroundColor="#16213e" CornerRadius="8" BorderColor="Transparent" HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPositionTapped"/>
                        </Frame.GestureRecognizers>
                        <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                            <!-- Position Info -->
                            <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding Symbol}" FontAttributes="Bold" FontSize="14" TextColor="White"/>
                                <Label FontSize="10" TextColor="#888">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Size}"/>
                                            <Span Text=" | "/>
                                            <Span Text="{Binding Margin}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>
                            
                            <!-- Alert Indicator -->
                            <Label Grid.Column="1" Text="{Binding AlertIndicator}" FontSize="10" VerticalOptions="Center" 
                                   TextColor="#f59e0b" Margin="4,0"/>
                            
                            <!-- PnL -->
                            <Label Grid.Column="2" Text="{Binding PnLDisplay}" FontSize="13" FontAttributes="Bold" 
                                   VerticalOptions="Center" TextColor="{Binding PnLColor}" Margin="4,0"/>
                            
                            <!-- Hamburger Menu -->
                            <Button Grid.Column="3" Text="⋮" FontSize="20" HeightRequest="36" WidthRequest="36" 
                                    BackgroundColor="Transparent" TextColor="#888" Padding="0"
                                    Clicked="OnPositionMenuClicked" CommandParameter="{Binding UniqueKey}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="No positions" FontSize="14" TextColor="#666" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>
                
                <!-- Portfolio Tab Content -->
                <ScrollView x:Name="PortfolioTab" IsVisible="False" BackgroundColor="#1a1a2e">
                    <VerticalStackLayout Padding="12" Spacing="10">
                        <!-- Summary Section -->
                        <Frame BackgroundColor="#16213e" CornerRadius="12" Padding="16" HasShadow="False">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="💰 Portfolio Summary" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                            
                                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="6">
                                    <Label Grid.Row="0" Grid.Column="0" Text="Initial:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="PortfolioInitialValueLabel" Grid.Row="0" Grid.Column="1" Text="0.00 USDT" FontSize="12" FontAttributes="Bold" TextColor="White" HorizontalOptions="End">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnPortfolioEditInitialValueClicked"/>
                                        </Label.GestureRecognizers>
                                    </Label>

                                    <Label Grid.Row="1" Grid.Column="0" Text="Initial Date:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="PortfolioInitialDateLabel" Grid.Row="1" Grid.Column="1" Text="2024-01-01" FontSize="12" FontAttributes="Bold" TextColor="White" HorizontalOptions="End"/>

                                    <Label Grid.Row="2" Grid.Column="0" Text="Current:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="PortfolioCurrentValueLabel" Grid.Row="2" Grid.Column="1" Text="0.00 USDT" FontSize="12" FontAttributes="Bold" TextColor="#4ade80" HorizontalOptions="End"/>

                                    <Label Grid.Row="3" Grid.Column="0" Text="Growth:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="PortfolioTotalGrowthLabel" Grid.Row="3" Grid.Column="1" Text="+0.00 USDT" FontSize="12" FontAttributes="Bold" TextColor="#4ade80" HorizontalOptions="End"/>

                                    <Label Grid.Row="4" Grid.Column="0" Text="Withdrawals:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="PortfolioTotalWithdrawalsLabel" Grid.Row="4" Grid.Column="1" Text="0.00 USDT" FontSize="12" FontAttributes="Bold" TextColor="#e94560" HorizontalOptions="End"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                        
                        <!-- Action Buttons - Smaller -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="6" RowDefinitions="Auto,Auto">
                            <Button x:Name="PortfolioUpdateCurrentValueButton" Text="📈 Update Current" FontSize="10" HeightRequest="32"
                                    Grid.Column="0" BackgroundColor="#1e3a5f" TextColor="White" CornerRadius="6"
                                    Clicked="OnPortfolioUpdateCurrentValueClicked"/>
                            <Button x:Name="PortfolioAddWithdrawalButton" Text="💸 Withdraw" FontSize="10" HeightRequest="32"
                                    Grid.Column="1" BackgroundColor="#5f1e3a" TextColor="White" CornerRadius="6"
                                    Clicked="OnPortfolioAddWithdrawalClicked"/>
                        </Grid>
                        
                        <!-- Growth Section -->
                        <Frame BackgroundColor="#16213e" CornerRadius="12" Padding="12" HasShadow="False">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="📊 Growth" FontSize="14" FontAttributes="Bold" TextColor="White"/>
                                
                                <!-- Line Graph using GraphicsView -->
                                <Frame BackgroundColor="#0f0f1a" CornerRadius="6" Padding="8" HasShadow="False" HeightRequest="200">
                                    <GraphicsView x:Name="PortfolioGrowthChartCanvas" HeightRequest="180"/>
                                </Frame>
                                
                                <CollectionView x:Name="PortfolioGrowthUpdatesCollection" HeightRequest="200">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="#0f0f1a" CornerRadius="6" Padding="8" Margin="0,0,0,4" HasShadow="False">
                                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Date, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
                                                           FontSize="10" TextColor="#aaa"/>
                                                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding Value, StringFormat='{0:+0.00;-0.00} USDT'}" 
                                                           FontSize="12" FontAttributes="Bold" TextColor="#4ade80" Margin="0,2,0,0"/>
                                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Notes}" 
                                                           FontSize="10" TextColor="#888" Margin="4,2,0,0"/>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                
                                <Label x:Name="PortfolioNoGrowthUpdatesLabel" Text="No growth updates" 
                                       FontSize="11" TextColor="#666" HorizontalOptions="Center" Margin="0,4"/>
                            </VerticalStackLayout>
                        </Frame>
                        

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Withdrawals Tab Content -->
                <ScrollView x:Name="WithdrawalsTab" IsVisible="False" BackgroundColor="#1a1a2e">
                    <VerticalStackLayout Padding="12" Spacing="10">
                        <!-- Withdrawals Summary -->
                        <Frame BackgroundColor="#16213e" CornerRadius="12" Padding="16" HasShadow="False">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="💸 Withdrawal Summary" FontSize="16" FontAttributes="Bold" TextColor="White"/>

                                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="6">
                                    <Label Grid.Row="0" Grid.Column="0" Text="Total Withdrawn:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="WithdrawalsTotalLabel" Grid.Row="0" Grid.Column="1" Text="0.00 USDT" FontSize="14" FontAttributes="Bold" TextColor="#e94560" HorizontalOptions="End"/>

                                    <Label Grid.Row="1" Grid.Column="0" Text="Number of Withdrawals:" FontSize="12" TextColor="#aaa"/>
                                    <Label x:Name="WithdrawalsCountLabel" Grid.Row="1" Grid.Column="1" Text="0" FontSize="14" FontAttributes="Bold" TextColor="White" HorizontalOptions="End"/>
                                </Grid>

                                <Button x:Name="WithdrawalsAddButton" Text="➕ Add Withdrawal" FontSize="12" HeightRequest="36"
                                        BackgroundColor="#5f1e3a" TextColor="White" CornerRadius="6"
                                        Clicked="OnPortfolioAddWithdrawalClicked" Margin="0,6,0,0"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Withdrawals List -->
                        <Frame BackgroundColor="#16213e" CornerRadius="12" Padding="12" HasShadow="False">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="📋 Withdrawal History" FontSize="14" FontAttributes="Bold" TextColor="White"/>

                                <CollectionView x:Name="PortfolioWithdrawalsCollection" HeightRequest="475">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="#0f0f1a" CornerRadius="6" Padding="10" Margin="0,0,0,6" HasShadow="False">
                                                <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="20,25,20">
                                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding CategoryDisplay}"
                                                           FontSize="12" FontAttributes="Bold" TextColor="#4ade80"/>
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Date, StringFormat='{0:MM-dd yyyy}'}"
                                                           FontSize="11" TextColor="#666" HorizontalOptions="End"/>
                                                    <Button Grid.Row="1" Grid.Column="1" Text="✏️" FontSize="14" HeightRequest="28" WidthRequest="28"
                                                            BackgroundColor="Transparent" TextColor="#888" Padding="0"
                                                            Clicked="OnPortfolioEditWithdrawalClicked"/>

                                                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding Amount, StringFormat='{0:0.00} {1}'}"
                                                           FontSize="14" FontAttributes="Bold" TextColor="#e94560" Margin="0,4,0,0"/>
                                                    <Button Grid.Row="2" Grid.Column="1" Text="🗑️" FontSize="14" HeightRequest="28" WidthRequest="28"
                                                            BackgroundColor="Transparent" TextColor="#e94560" Padding="0"
                                                            Clicked="OnPortfolioDeleteWithdrawalClicked" Margin="0,4,0,0"/>

                                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Description}"
                                                           FontSize="11" TextColor="#888" Margin="0,4,0,0"/>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <Label x:Name="PortfolioNoWithdrawalsLabel" Text="No withdrawals recorded"
                                       FontSize="12" TextColor="#666" HorizontalOptions="Center" Margin="0,8"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="2" BackgroundColor="#CC000000" IsVisible="False">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                <ActivityIndicator IsRunning="True" Color="#a855f7" WidthRequest="60" HeightRequest="60"/>
                <Label x:Name="LoadingLabel" Text="Analyzing..." FontSize="18" TextColor="White" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>
