<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BinanceMonitorMaui.Models"
             x:Class="BinanceMonitorMaui.MainPage"
             Title="Binance Monitor"
             BackgroundColor="#1a1a2e">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="🔄" Clicked="OnRefreshClicked" />
        <ToolbarItem Text="🔌" Clicked="OnRestartClicked" />
        <ToolbarItem Text="⚙" Clicked="OnSettingsClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="8">
        
        <Frame Grid.Row="0" BackgroundColor="#16213e" CornerRadius="12" Padding="15" BorderColor="Transparent" HasShadow="False">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSettingsClicked" />
            </Frame.GestureRecognizers>
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
                <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" Spacing="8">
                    <Label x:Name="StatusLabel" Text="Disconnected" FontSize="14" FontAttributes="Bold" TextColor="#e94560" VerticalOptions="Center"/>
                    <Label x:Name="PositionCountLabel" Text="" FontSize="12" TextColor="#888" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                    <Label Text="Total PnL" FontSize="10" TextColor="#888" HorizontalTextAlignment="Center"/>
                    <Label x:Name="TotalPnLLabel" Text="0.00" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                    <Label Text="Avg %" FontSize="10" TextColor="#888" HorizontalTextAlignment="Center"/>
                    <Label x:Name="TotalPnLPercentLabel" Text="0.00%" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>
        
        <CollectionView x:Name="PositionsCollection" Grid.Row="1" Margin="0,8,0,0" BackgroundColor="Transparent" IsGrouped="True">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="models:TraderGroup">
                    <Grid Padding="12,16,12,4">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="{Binding TraderName}" FontSize="13" FontAttributes="Bold" TextColor="#64748b" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding PnLSummary}" FontSize="12" FontAttributes="Bold" TextColor="{Binding PnLColor}" VerticalOptions="Center"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Position">
                    <Frame Margin="0,3" Padding="12" BackgroundColor="#16213e" CornerRadius="10" BorderColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="{Binding Symbol}" FontAttributes="Bold" FontSize="15" TextColor="White"/>
                                <Label FontSize="10" TextColor="#888">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Size}"/>
                                            <Span Text=" | "/>
                                            <Span Text="{Binding Margin}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text="{Binding PnLDisplay}" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" TextColor="{Binding PnLColor}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="No positions" FontSize="14" TextColor="#666" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
            </CollectionView.EmptyView>
        </CollectionView>
        
    </Grid>

</ContentPage>
